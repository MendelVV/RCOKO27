<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/margin"
        app:cardCornerRadius="@dimen/mini_padding">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding"
                android:paddingEnd="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/mini_padding">
            <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="@dimen/logo_img_size"
                    android:layout_height="@dimen/logo_img_size"
                    android:src="@drawable/rcoko27"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
            <TextView
                    android:id="@+id/event_type"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/event_image"
                    android:textSize="@dimen/text16"
                    android:layout_marginStart="@dimen/padding"/>
            <TextView
                    android:id="@+id/event_title"
                    android:textColor="@color/colorText"
                    android:layout_below="@id/event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/event_image"
                    android:textSize="@dimen/text20"
                    android:layout_marginStart="@dimen/padding"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"/>
        <RelativeLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding"
                android:paddingStart="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:paddingTop="@dimen/mini_padding">
            <TextView
                    android:id="@+id/event_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text18"/>
            <TextView
                    android:id="@+id/event_news_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_text"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text16"
                    android:layout_marginTop="@dimen/padding"
                    android:textColor="@color/colorGray"/>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>