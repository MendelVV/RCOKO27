<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">
        <TextView

                android:id="@+id/button_exit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_img_size"
                android:text="@string/exit"
                android:drawableStart="@drawable/ic_exit"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorTextAlt"
                android:textSize="@dimen/text16"
                android:gravity="center"
                android:padding="2dp"
                android:background="@drawable/background_item_blue"
                android:drawablePadding="2dp"/>

        <ImageView
                android:id="@+id/button_settings"
                android:layout_width="@dimen/setting_img_size"
                android:layout_height="@dimen/setting_img_size"
                android:src="@drawable/ic_settings"
                android:scaleType="center"
                android:background="@drawable/background_circle_action"
                android:layout_alignParentEnd="true"
                android:visibility="visible"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
