<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding">

    <RelativeLayout
            android:background="@drawable/background_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

        <ImageView
                android:layout_width="@dimen/logo_img_size"
                android:layout_height="@dimen/logo_img_size"
                android:id="@+id/event_image"
                android:src="@drawable/rcoko27"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
        <TextView
                android:id="@+id/event_type"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/event_image"
                android:layout_marginStart="@dimen/padding"/>
        <TextView
                android:id="@+id/text_title"
                android:textSize="@dimen/text20"
                android:textColor="@color/colorText"
                android:layout_toEndOf="@id/event_image"
                android:layout_below="@id/event_type"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding"/>
        <TextView
                android:id="@+id/text_info"
                android:textSize="@dimen/text18"
                android:textColor="@color/colorTextSecond"
                android:layout_below="@+id/event_image"
                android:maxLines="4"
                android:textStyle="italic"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/event_messages"
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/ic_event_messages"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_info"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:drawablePadding="2dp"/>

        <TextView
                android:id="@+id/event_voitings"
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/ic_event_voting"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text16"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/text_info"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:layout_toEndOf="@id/event_messages"
                android:drawablePadding="2dp"/>

        <TextView
                android:id="@+id/event_news_date"
                android:layout_marginTop="@dimen/margin"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_info"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
